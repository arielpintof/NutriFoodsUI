@inherits LayoutComponentBase

<MudThemeProvider Theme="myTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout Style="background: #F8F8F8">

    <NavMenu @bind-CanMiniSideMenuDrawer="_canMiniSideMenuDrawer"
             @bind-SideMenuDrawerOpen="_sideMenuDrawerOpen"
             User="@_user"/>
    <MudMainContent >
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    private readonly NavMenu.UserModel _user = new()
    {
        Avatar = "./sample-data/avatar.png",
        DisplayName = "MudDemo",
        Email = "muddemo@demo.com.au",
        Role = "Admin"
    };

    private bool _canMiniSideMenuDrawer = true;
    private bool _commandPaletteOpen;
    private bool _sideMenuDrawerOpen;
    
    private MudTheme myTheme = new()
    {
        Palette = new PaletteLight
        {
            Primary = "#5F4AA6",
            Secondary = "#B0B006",
            Tertiary = "#5B06B0",
            Info = "#928B8B",
            Success = "#2ECC40",
            Warning = "#FF851B",
            Error = "#D50000",
            AppbarBackground = "#F8F8F8",
            DarkLighten = "#545252",
            Background = "#f9f9f9"

        },
        LayoutProperties = new LayoutProperties
        {
            DefaultBorderRadius = "10px"
        }
        
    };

}