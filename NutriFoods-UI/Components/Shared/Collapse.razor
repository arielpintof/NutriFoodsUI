@using NutriFoods_UI.Data.Model

<MudExpansionPanels MultiExpansion="true" Elevation="0" DisableBorders="true">
    @foreach (var item in CollapseItems)
    {
        <MudExpansionPanel Dense="true" Class="mt-3 rounded" IsInitiallyExpanded="true">
            <TitleContent>
                <CollapseTitle Title="@item.Title"></CollapseTitle>
            </TitleContent>
            <ChildContent>
                <MudDivider DividerType="DividerType.Middle" Class="mb-5"/>
                @item.ChildContent
            </ChildContent>
        </MudExpansionPanel>
    }
</MudExpansionPanels>   


@code {
    
    [Parameter] 
    public List<CollapseItemModel> CollapseItems { get; set; } = [];

}