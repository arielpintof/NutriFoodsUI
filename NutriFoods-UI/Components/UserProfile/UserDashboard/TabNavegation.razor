<MudTabs Class="d-flex tabs-container"
         Elevation="0"
         Outlined="true"
         Rounded="true"
         PanelClass="py-6"
         Style=""
         MinimumTabWidth="20px">

    <ChildContent>
        <MudTabPanel Text="General"
                     Class="tab-style">
            <GeneralDashboard></GeneralDashboard>
        </MudTabPanel>

        <MudTabPanel Text="Datos Clínicos"
                     Class="tab-style">
            <ClinicDashboard/>
        </MudTabPanel>

        <MudTabPanel Text="Datos Alimentarios"
                     Class="tab-style">
            <AlimentaryDashboard/>
        </MudTabPanel>

        <MudTabPanel Text="Consultas"
                     Class="tab-style">
            <Consultations PatientId="PatientId"></Consultations>
        </MudTabPanel>
        <AddConsultationButton PatientId="PatientId" Class="overlay-button rounded-pill"></AddConsultationButton>
    </ChildContent>
</MudTabs>



@code {
    [Parameter]
    public Guid PatientId { get; set; }
    
}

<style>
    .mud-tabs-toolbar {
        position: relative;
        background-color: #F8F8F8;
    }
    .mud-tab.mud-tab-active{
        font-weight: bold;
    }
    .mud-paper-outlined{
        border-bottom: 1px solid var(--mud-palette-lines-default);
        border-top: 0 solid var(--mud-palette-lines-default) ;
        border-left: 0 solid var(--mud-palette-lines-default) ;
        border-right: 0 solid var(--mud-palette-lines-default) ;
        
    }
    .tabs-container {
        position: relative;
    }
    .overlay-button {
        position: absolute;
        top: 0;
        right: 0;
        margin: -40px 30px;
    }
    
    .tab-style{
        font-size:1em;
        text-transform: none;
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-weight: 500;
        border-radius: 15px;
        color: var(--grey-light);
    }
    
    

</style>