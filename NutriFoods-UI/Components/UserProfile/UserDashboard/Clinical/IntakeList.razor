@using NutriFoods_UI.Data.Dto

@if (Ingestibles.Any())
{
    <table class="my-table mud-width-full justify-space-beetween flex-grow-1 gap-2">
        <thead>
        <tr>
            <th scope="col" style="width: 50%">Nombre</th>
            <th scope="col"  style="width: 25%">Dosis</th>
            <th scope="col" style="width: 20%">Adherencia</th>
        </tr>
        </thead>
        <tbody class="mt-2">
        
            @foreach (var ingestible in Ingestibles)
            {
                <tr>
                <td>@ingestible.Name</td>
                <td>@ingestible.Dosage @ingestible.Unit</td>
                <td>@ingestible.Adherence</td>
                </tr>
            }
        
        </tbody>

    </table> 
}

@code {

    [Parameter] public List<IngestibleDto> Ingestibles { get; set; } = [];
}