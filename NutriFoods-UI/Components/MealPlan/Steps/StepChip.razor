@page "/steps"

<div class="chip filled">
    <span>@Text</span>
</div>


<span>@GetClassForStepState(State)</span>


@code{

    [Parameter]
    public string Text { get; set; } = string.Empty;
    
    [Parameter]
    public StepState State { get; set;}

    protected override Task OnInitializedAsync()
    {
        Text = "Clínica";
        State = StepState.Completed;
        
        return Task.CompletedTask;
    }
    

    private static string GetClassForStepState(StepState stepState) { return stepState switch
    {
        StepState.Active => "outlined",
        StepState.Completed => "filled",
        StepState.Blocked => "blocked",
        _ => ""
        }; 
    }
    
    public enum StepState
    {
        Active = 1,
        Completed = 2,
        Blocked = 3
    }
}

<style>
    
    
    .filled{
        background-color: var(--color-primary);
        color: #FFFFFF;
    }
    
    span{
        background-color: var(--color-primary);
    }
    
    .outlined{
        background-color:  #FFFFFF;
        color: var(--grey-heavy);
        border: 1px solid var(--color-primary);
    }
    
    .blocked{
        background-color:  #FFFFFF;
        color: var(--grey-normal);
    }
</style>
