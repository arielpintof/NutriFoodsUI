@using Fluxor
@using NutriFoods_UI.Data.Store.DailyMenu
@using NutriFoods_UI.Data.Dto
@using NutriFoods_UI.Data.Store.DailyMeal
@using NutriFoods_UI.Services
@using NutriFoods_UI.Utils.Enums
@inject IState<DailyMealState> MealState
@inject IDispatcher Dispatcher
@inherits Fluxor.Blazor.Web.Components.FluxorComponent


<div class="icon-section d-flex align-items-center gap-1">
    <MudTooltip Placement="Placement.Top" Text="@RenewText()">
        <MudIconButton
            Icon="@Icons.Material.Outlined.Autorenew"
            Size="Size.Small"
            @onclick="MealRenew"
            Disabled="MealState.Value.MealLoading.ElementAt(Index)">
        </MudIconButton>
    </MudTooltip>
    
    <MudTooltip Placement="Placement.Top" Text="@ConfigText()">
        <MudMenu 
            Icon="@Icons.Material.Outlined.Settings" 
            Size="Size.Small">
        </MudMenu>
    </MudTooltip>

    <MudTooltip Placement="Placement.Top" Text="@OptionsText()">
        <MudMenu 
            Icon="@Icons.Material.Filled.MoreVert" 
            Size="Size.Small">
            <MudMenuItem 
                Icon="@Icons.Material.Outlined.AccessTime"
                IconSize="Size.Small">
                <span
                    style="font-family: 'Plus Jakarta Sans', sans-serif; font-size: 14px">
                    Modificar hora
                </span>
            </MudMenuItem>
            <MudMenuItem 
                Icon="@Icons.Material.Outlined.Delete"
                IconSize="Size.Small">
                <span 
                    style="font-family: 'Plus Jakarta Sans', sans-serif; font-size: 14px">
                    Eliminar @MealState.Value.DailyMenu.ElementAt(Index).MealType
                </span>

            </MudMenuItem>
        </MudMenu>
    </MudTooltip>
</div>

@code {

    private string RenewText() => $"Renovar {MealState.Value.DailyMenu.ElementAt(Index).MealType.ToLower()}";

    private string ConfigText() => $"Configurar {MealState.Value.DailyMenu.ElementAt(Index).MealType.ToLower()}";

    private string OptionsText() => $"Opciones para {MealState.Value.DailyMenu.ElementAt(Index).MealType.ToLower()}";
    
    [Parameter]
    public int Index { get; set; }

    private void MealRenew() => Dispatcher.Dispatch(new RenewMenuAction(Index));

}