@page "/chart"
@using NutriFoods_UI.Data.Store
@using Fluxor
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudChart ChartType="ChartType.Pie" InputData="@Data" @bind-SelectedIndex="Index" InputLabels="@labels" Width="300px" Height="300px" />


@code {
    private int Index = -1; 
    int dataSize = 3;
    
    string[] labels = { "Carbohidratos", "Proteínas", "Lípidos" };

    private double[] Data => new [] 
    { MoleculaState.Value.CarbTarget, MoleculaState.Value.ProteinTarget, MoleculaState.Value.LipidTarget };

    [Inject]
    private IState<MoleculaState> MoleculaState { get; set; } = null!;
    
    
    
}