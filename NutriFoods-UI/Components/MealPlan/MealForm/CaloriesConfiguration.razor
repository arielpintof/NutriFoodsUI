@using NutriFoods_UI.Data.Model

<MudExpansionPanels MultiExpansion="false" Elevation="0">

    @foreach (var item in _collapseItemModels)
    {
        <MudExpansionPanel Dense="true" Class="mt-3 rounded">
            <TitleContent>
                <CollapseTitle Title="@item.Title"></CollapseTitle>
            </TitleContent>
            <ChildContent>
                <MudDivider DividerType="DividerType.Middle" Class="mb-5"/>
                @item.ChildContent
            </ChildContent>
        </MudExpansionPanel>
    }

</MudExpansionPanels>


@code {

    private List<CollapseItemModel> _collapseItemModels = new()
    {
        new CollapseItemModel
        {
            Title = "Días de la semana",
            ChildContent = __builder =>
            {
                <DaysIntake></DaysIntake>
            }
        },
        new CollapseItemModel
        {
            Title = "Requerimiento energético",
            ChildContent = __builder =>
            {
                <PhysicalActivityIntake></PhysicalActivityIntake>
            }
        },
    };

}