@using NutriFoods_UI.Utils.Enums
@using NutriFoods_UI.Data.Store.MealsConfiguration
@using Fluxor


@for (var i = 0; i < MealTypes.Count; i++)
{
    <MealTypeIntake Position="i" MealType="MealTypes[i]"></MealTypeIntake>
    <MudDivider Class="mb-5 mt-2"/>
}


@code {

    private List<MealTypeEnum> MealTypes { get; set; } = new()
    {
        MealTypeEnum.Breakfast,
        MealTypeEnum.Lunch,
        MealTypeEnum.Dinner
    };

    private MealConfiguration CurrentMealConfiguration { get; set; } = new MealConfiguration();

    [Inject]
    private IState<MealsConfigurationState> MealState { get; set; } = null!;






}