@inject IDialogService Dialog

<div class="mb-2 mt-3">
    <MudButton
        Size="Size.Small"
        Color="Color.Primary"
        StartIcon="@Icons.Material.Outlined.AddCircle"
        Variant="Variant.Text"
        Style="text-transform: none; font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700;"
        OnClick="(e) => OpenDialog(_noHeader)">
        Añadir una patología
    </MudButton>
</div>

@code {
    
    DialogOptions _noHeader = new DialogOptions() { NoHeader = true };
    
    private void OpenDialog(DialogOptions options)
    {
        //Dispatcher.Dispatch(new UpdateDialogAction(recipe));
        Dialog.Show<MedicationIntake>("Custom Options Dialog", options);
    }
}